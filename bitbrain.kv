<BitBrainAndPuzzle1>:
	name: "bit_brain_and_puzzle1"
	bit_brain_game: BitBrainGame()
	Label:
		font_size: 60
		#center_x: root.width / 2
		#top: root.top - 50
		#anchor_y: 'bottom'
		text: str("AND (&)" + "\n" + root.display()[0] + "\n" + root.display()[1])
		color: 1, 1, 1, 1
		canvas:
			Color:
				rgba: 0, 0, 0, 1
	TextInput:
		id: textinput_and1
		text: root.textinput_text
		multiline: False
		size_hint: (None, None)
		font_size: 40
		pos: root.width / 2 - root.width / 12, 120
		width: root.width / 6
		height: 60
		bold: True
	Button:
		id: button_and1
		text: "Enter"
		pos: root.width / 2 - root.width / 16, 70
		size_hint: None, None
		size: root.width / 8, 40
		on_press: root.check()
		on_release:
			if root.check() == 0: root.manager.current = "game"

