<BitBossScreenManager>:
	BitBossWelcome:
		id: "welcome"
	BitBossGame:
		id: "game"
	BitBossAndTutorial:
		id: "bit_boss_and_tutorial"
	BitBossOrTutorial:
		id: "bit_boss_or_tutorial"
	BitBossCompTutorial:
		id: "bit_boss_comp_tutorial"

<BitBossWelcome>:
	name: "welcome"
	BoxLayout:
		orientation: "vertical"
		canvas:
			Rectangle:
				pos: 5, self.height / 2 + 5
				size: self.width - 10, self.height / 2 - 10
		Label:
			font_size: 60
			center_x: root.width / 2
			top: root.top - 50
			text: "Bit Boss"
			color: 5/255, 57/255, 112/255, 1
			canvas:
				Color:
					rgba: 0, 0, 0, 1
		Button:
			text: "Play"
			halign: "center"
			valign: "middle"
			pos: (root.width / 2) - 90, 40
			on_release: root.manager.current = "game"

<BitBossGame>:
	name: "game"
	BoxLayout:
		orientation: "vertical"
		canvas:
			Rectangle:
				pos: 5, 3 * self.height / 4
				size: self.width - 10, self.height / 4 - 5

		Label:
			font_size: 60
			#center_x: root.width / 2
			#top: root.top - 50
			#anchor_y: 'bottom'
			text: "Bit Boss"
			color: 5/255, 57/255, 112/255, 1
			canvas:
				Color:
					rgba: 0, 0, 0, 1

		Label:
			font_size: 60
			#center_x: root.width / 2
			#top: root.top - 50
			#anchor_y: 'bottom'
			text: ""
			color: 5/255, 57/255, 112/255, 1
			canvas:
				Color:
					rgba: 0, 0, 0, 1

		Label:
			font_size: 60
			#center_x: root.width / 2
			#top: root.top - 50
			#anchor_y: 'bottom'
			text: ""
			color: 5/255, 57/255, 112/255, 1
			canvas:
				Color:
					rgba: 0, 0, 0, 1

		Button:
			text: "Back"
			size_hint: None, None
			size: root.width / 2, root.height / 4
			background_color: (149 / 255, 197 / 255, 251 / 255, 1.0)
			on_release: root.manager.current = "welcome"
	Button:
		id: "move_to_map"
		text: "Medium"
		pos: root.width / 2, 0
		disabled: True
		size_hint: None, None
		size: root.width / 2, root.height / 4
		background_color: (149 / 255, 197 / 255, 251 / 255, 1.0)
		on_release: root.manager.current = "welcome"
	Button:
		id: and_tutorial
		text: "'And' (&)"
		pos: root.width / 2 - 3 * root.height / 8 - 5, root.height / 2 - root.height / 8
		size_hint: None, None
		size: root.height / 4, root.height / 4
		on_press: root.manager.current = "bit_boss_and_tutorial"
		on_release: root.and_tutorial_completed(self)
	Button:
		id: or_tutorial
		text: "'Or' (|)"
		disabled: True
		pos: root.width / 2 - root.height / 8, root.height / 2 - root.height / 8
		size_hint: None, None
		size: root.height / 4, root.height / 4
		on_press: root.manager.current = "bit_boss_or_tutorial"
		on_release: root.or_tutorial_completed(self)
	Button:
		id: comp_tutorial
		text: "'Not' (~)"
		disabled: True
		pos: root.width / 2 + root.height / 8 + 5, root.height / 2 - root.height / 8
		size_hint: None, None
		size: root.height / 4, root.height / 4
		on_release: root.manager.current = "bit_boss_comp_tutorial"

<BitBossAndTutorial>:
	name: "bit_boss_and_tutorial"
	Image:
		source: "images/and.png"
	Button:
		id: "and_back_button"
		text: "Back"
		size_hint: None, None
		pos: 5, 5
		size: 50, 30
		on_release: root.manager.current = "game"

<BitBossOrTutorial>:
	name: "bit_boss_or_tutorial"
	Image:
		source: "images/or.png"
	Button:
		id: "or_back_button"
		text: "Back"
		size_hint: None, None
		pos: 5, 5
		size: 50, 30
		on_release: root.manager.current = "game"

<BitBossCompTutorial>:
	name: "bit_boss_comp_tutorial"
	Image:
		source: "images/comp.png"
	Button:
		id: "comp_back_button"
		text: "Back"
		size_hint: None, None
		pos: 5, 5
		size: 50, 30
		on_release: root.manager.current = "game"